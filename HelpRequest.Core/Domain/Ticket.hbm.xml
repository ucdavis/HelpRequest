<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    assembly="HelpRequest.Core" namespace="HelpRequest.Core.Domain">
  <class
    name="Ticket"
    table="DoesNotExist" >
    <id name="Id" column="id" unsaved-value="0">
      <generator class="identity" />
    </id>

    <many-to-one name="User" class="HelpRequest.Core.Domain.User, HelpRequest.Core" column="UserId" cascade="none" />
    <property name="FromEmail"/>
    <property name="UrgencyLevel" />
    <property name="SupportDepartment" />
    <property name="SupportDepartmentOther" />
    <property name="Subject" />
    <property name="MessageBody" />
    <property name="Availability" />
    <property name="ForApplication" />
    <property name="ForWebSite" />
    <property name="EmailCCs" />
    <bag name="Attachments" table="AttachmentDoesNotExist"  cascade="all-delete-orphan" inverse="true">
      <key column="Id"/>
      <one-to-many class="HelpRequest.Core.Domain.Attachment, HelpRequest.Core"/>
    </bag>


  </class>
</hibernate-mapping>